classdef navDIC_Source < handle
    
    properties
        % Class, Name and validity
            Name = '' ;
            Class = 'BasicSource' ;
            isValid = true ;
        % Kepp all Acquired data ? 
            KeepData = true ;
        % Acquired Data
            Data = [] ;
    end
    
    
    methods
        
        % CONSTRUCTOR
            function obj = navDICSource()
            end
        
        % GET DATA At SPECIFIC FRAMES
            function data = getData(obj,frames)
                if obj.KeepData
                    sz = size(Data) ;
                    data = reshape(Data,[prod(sz(1:end-1)),sz(end)]) ;
                    data = data(:,frames) ;
                    data = reshape(data,[sz(1:end-1) length(frames)]) ;
                else
                    if length(frames)>1
                        data
                    else
                    end
                end
            end
        
        % PUSH DATA (ADD DATA AT THE END)
            function pushData(obj,data)
                if obj.KeepData
                    obj.Data = cat(ndims(data)+1,obj.Data,data) ;
                else
                    obj.Data = data ;
                end
            end
            
    end
    
end